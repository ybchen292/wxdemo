page{
    font-size: 24rpx;
}

.header .top{
    margin: 30rpx;
}

.header .top .query{
    border: 1px solid #c6c6c6;
    border-radius: 10rpx;
    display: flex;
    position: relative;
    padding: 10rpx 0;
}

.header .top .query .left{
    display: flex;
    margin-left: 20rpx;
    align-items: center;
}

.header .top .query .right{
    display: flex;
    position: absolute;
    right: 0;
    align-items: center;
}

.header .top .query .right view{
    margin: 0 0 0 30rpx;
}

.header .top .query .right button{
    border: none;
    outline: none;
    background: transparent;
}

.header .top .query .right button::after{
    border: none;
    
}

.header .classify{
    display: flex;
    justify-content: space-around;
    margin-bottom: 30rpx;
}

.header .classify .item{
    font-size: 28rpx;
}

.header .classify .item image{
    margin-left: 20rpx;
}


.content .shop{
    padding: 0 40rpx 20rpx 40rpx;
    background-color: #fff;
    margin-top: 30rpx;
}

.content .shop .shop-title{
    font-size: 36rpx;
}

.content .shop .shop-item{
    margin-top: 40rpx;
}

.content .shop .shop-item .item-down{
    display: flex;
    margin-top: 20rpx;
    position:relative;
}
.content .shop .shop-item .item-down::after{
    content: "";
    position:absolute;
    width: 100%;
    height: 1px;
    bottom: -15rpx;
    background-color: #999999;
}
.content .shop .shop-item .item-down view{
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.content .shop .shop-item .item-down view{
    display:block;
    color: #999999;
    margin-bottom: 10rpx;
    padding-right: 10rpx;
}

.content .shop .shop-item .item-down view:last-child{
    position: relative;
}
.content .shop .shop-item .item-down text{
    color: red;
    font-size: 40rpx;
    position: absolute;
    bottom: 0;
    right: 0;
}

.content .price .condition .item{
    display: flex;
    justify-content: space-around;
    margin: 30rpx 10rpx;
    align-items: center;
}

.content .price .condition .item text:nth-child(1){
    color: red;
}

.content .price .condition .item input{
    position: relative;
    width: 130rpx;
    border: 1rpx solid #d6d6d6;
    padding-right: 35rpx;
    padding-left: 20rpx;
}

.content .price .condition .item input::after{
    content: 'ä¸‡';
    position: absolute;
    right: 10rpx;
    top: 50%;
    transform: translateY(-50%);
}

.content .price .condition .item button{
    margin: 0;
}

.content .order .condition{
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 30rpx 0;
}

.content .order .condition text:nth-child(1){
    color: red;
}

.content .more{
    position: relative;
}

.content .more .down button{
    flex:1;
}

.content .more .down{
    position: fixed;
    display: flex;
    bottom: 0;
    left: 0;
    right: 0;
    
}

.content .more .condition .item {
    margin: 30rpx ;
    margin-bottom: 0;
}

.content .more .condition .item .title{
   font-size: 28rpx;
   color: #282828;
   margin-bottom: 20rpx;
}

.content .more .condition .item .content{
   display: flex;
   margin-bottom: 20rpx;
}

.content .more .condition .item .content text{
    width: 150rpx;
    height: 56rpx;
    border: 1px solid #aaa5a5f5;
    margin-right: 15rpx;
    white-space: nowrap;
    text-align: center;
    line-height: 56rpx;
}

